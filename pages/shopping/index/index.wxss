@import '/miniprogram_npm/@vant/weapp/common/index.wxss';
.container {
    width: 750rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .banner-swiper-container .swipers {
    width: 100%;
    height: 312rpx;
  }
  .banner-swiper-container .swipers image {
    width: 100%;
    height: 100%;
  }
.brandInfo{
  padding :24rpx;
  position: relative;
}
.brandInfo .name{
  font-weight: 500;
  font-size: 28rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(68,68,68,1);
  width: 640rpx;
}

.price{
  margin-top: 12rpx;
  color: #ee731a;
  font-weight: 500;
  padding-right: 80rpx;
  font-family:Source Han Sans CN;
  font-size: 24rpx;
}
.tag .btn{
  width: 100rpx;
  border-radius: 60rpx;
  height: 40rpx;
  background-color: #ee731a;
  text-align: center;
}
.tag .btn view{
  font-size: 24rpx;
  color: white;
  line-height: 40rpx;
}
.imageRight{
  width:50rpx;
  height:50rpx;
  position: absolute;
  top: 24rpx;
  right: 10px;
}
.mark .header{
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.mark .header .remark{
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(68,68,68,1);
}
.mark .header .query{
  font-size:20rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.remarkList{
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.remarkList .username{
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(102,102,102,1);
  padding-left: 20rpx;
}
.content{
  margin-left: 20rpx;
  width:690rpx;
  height:50rpx;
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(102,102,102,1);
  padding-top: 5rpx;
}
.intro{
display: flex;
}
.intro view{
  font-size: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-weight: 500;
  font-family:Source Han Sans CN;
}

.stores-list-container {
  position: relative;
  width: 100%;
  padding: 30rpx 0rpx;
} 
.image-container{
  display: flex;
}
#shopName{
  display: flex;
  line-height: 70rpx;
  padding-left: 15rpx;
  font-weight: 500;
  font-size: 28rpx;
  font-family:Source Han Sans CN;
  color:rgba(68,68,68,1);
}
.right{
  display: flex;
  position: absolute;
  top: 30rpx;
  right: 0rpx;

}
.list-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list-container .list-item {
  width: 339rpx;
  height: 260rpx;
  margin-bottom: 20rpx;
}

.list-container .list-item image {
  width: 339rpx;
  height: 260rpx;
  display: block;
}
.activity-recommen{
  margin-top: 25rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
}
.line{
  margin: 0rpx;
}
.bargain{
  width:578rpx;
  height:332rpx;
  background:rgba(254,254,254,1);
}
.bargain .title {
  display: flex;
  justify-content: center;
  padding-bottom: 30rpx;
}
.bargain .title .header{
  text-align: center;
  font-size:28rpx;
  height: 30rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(102,102,102,1);
  margin-top: 60rpx;
}
.progress{
  width:448rpx;
  height:24rpx;
  background:rgba(254,254,254,1);
  border:2rpx solid rgba(238,115,26,1);
  border-radius:12rpx;
  margin-left: 70rpx;
}
.pop-footer{
  text-align: center;
  margin-top: 20rpx;
  font-size:28rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(66,66,66,1);
}
.footer-container{
  padding-top: 100rpx;
  text-align: right;
}