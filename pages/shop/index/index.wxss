@import '../../../app.wxss';
.container{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.back{
  display: flex;
  position: relative;
  font-size: 24rpx;
  height: 60rpx;
  top: 0rpx;
  left: 0rpx;
  line-height: 60rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
}
image{
  padding-top: 9rpx;
  margin-right: 16rpx;
}
.back image{
  width: 40rpx;
}
.imageRight{
  position:absolute;
  right: -20rpx;
  top: 0rpx;
}


.brand{
  font-weight: 500;
  position: relative;
  
}
.brand text{
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
  color:rgba(68,68,68,1);
}
.address{
  display: flex;
  font-size: 20rpx;
  flex-direction: row;
  justify-content: space-between;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.address .distance{
  right: 20rpx;
  margin-top: -27rpx;

}
.tab-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tab-list {
  font-size: 28rpx;
  font-weight: bold;
  width: 600rpx;
  position: relative;
  display: inline-block;
  padding-left: 60rpx;
}
.image{
  position: absolute;
  top: 15rpx;
  display: inline-block;
  width: 40rpx;
  left: 0rpx;
}

.tab-active {
  color: #ee731a !important;
  font-size: 36rpx !important;
  font-weight: bold !important;
}

.list-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list-container .list-item {
  width: 339rpx;
  height: 260rpx;
  margin-bottom: 20rpx;
}

.list-container .list-item image {
  width: 339rpx;
  height: 260rpx;
  display: block;
}


.banner-swiper-container .swipers {
  width: 100%;
  height: 300rpx;
}

.banner-swiper-container .swipers image {
  width: 100%;
  height: 100%;
}

/* 4s店 */
.stores .hot-brand {
  margin-top: 10rpx;
  width: 100%;
  height: 176rpx;
  padding: 13rpx 19rpx;
  box-sizing: border-box;
}

.stores .hot-brand .title {
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.stores .hot-brand .all {
  font-size: 20rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.stores .hot-brand .brand-container {
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.stores .hot-brand .brand-item {
  text-align: center;
}


.stores .hot-brand .brand-item .image-container {
  height: 70rpx;
  width: 70rpx;
}

.stores .hot-brand .brand-item .name {
  font-size: 20rpx;
  color: #444;
  margin-top: 10rpx;
}

.stores .stores-list-container {
  padding: 14rpx 20rpx;
}

.stores .stores-item {
  margin-top: 15rpx;
}

.stores .stores-item .title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stores .stores-item .title-container .left {
  display: flex;
  align-items: center;
}

.stores .stores-item .title-container .left .store-name {
  font-size: 24rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
}

.stores .stores-item .title-container .left .address {
  font-size: 20rpx;
  color: #999;
}

/* 品牌 */
.brand .stores-container {
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}

.brand .stores-container .stores-item {
  font-size: 24rpx;
  padding: 5rpx 24rpx;
  border-radius: 7rpx;
  background-color: #F1F1F1;
  margin-right: 15rpx;
}

.loading-container {
  text-align: center;
  color: #999;
}